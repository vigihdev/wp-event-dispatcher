{
    "name": "vigihdev/wp-event-dispatcher",
    "description": "Lightweight event dispatcher for WordPress, designed with a Symfony-like architecture. Helps developers create clean, modular, and scalable WordPress plugins or themes using event-driven patterns.",
    "keywords": [
        "wordpress",
        "event dispatcher",
        "event system",
        "events",
        "listeners",
        "hooks",
        "symfony",
        "architecture",
        "plugin development",
        "vigihdev"
    ],
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "homepage": "https://github.com/vigihdev/wp-event-dispatcher",
    "authors": [
        {
            "name": "Vigih Dev",
            "email": "vigihdev@gmail.com",
            "role": "developer"
        }
    ],
    "config": {
        "process-timeout": 0
    },
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "symfony/filesystem": "^6.4",
        "symfony/event-dispatcher": "^6.4"
    },
    "require-dev": {
        "phpunit/phpunit": "10.5.x-dev"
    },
    "autoload": {
        "psr-4": {
            "Vigihdev\\WpEventDispatcher\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vigihdev\\WpEventDispatcher\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "dev": "php -S localhost:4932 dev.php"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    }
}